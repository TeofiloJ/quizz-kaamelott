 <div class="row quote-row mt-2">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        {{!-- Citation #{{quote.id}} --}}
                        De qui provient cette citation ?
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                        <p>{{this.question.text}} - {{this.question.season}} </p>
                        <footer class="blockquote-footer">{{this.question.character}} {{this.perso}}</footer>
                        <div class="valideChapters">
                            {{#each this.renderedPerso as |perso|}}
                                <button {{on 'click' this.validatePerso}} disabled={{this.disable}} style="margin-left: 1%;">{{perso}}</button>
                            {{/each}}
                        </div>
                        <div style="text-align: center;">
                            <span class="quizzAnswer" style={{this.answerStyle}}>{{this.errorMessage}}</span>
                        </div>
                        {{!-- <footer class="blockquote-footer">{{quote.character}} (<cite title="Source Title">{{quote.season}} Ã©pisode {{quote.episode}}).</cite></footer> --}}
                        </blockquote>
                    </div>
                </div>
            </div>
        </div>
{{yield}}