 <div class="row quote-row mt-2">
            <div class="col">
                <div class="card">
                    <div class="card-header" style="font-weight: bold;">
                        {{!-- Citation #{{quote.id}} --}}
                        Question {{this.nbQuestion}}
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                        <p>De qui provient cette citation ?</p>
                        <footer class="blockquote-footer" style="font-size: large">"{{this.question.text}}"</footer>
                        <div class="valideChapters">
                            {{#each this.renderedPerso as |perso|}}
                                <button {{on 'click' this.validatePerso}} disabled={{this.disable}} style="margin-left: 1%;">{{perso}}</button>
                            {{/each}}
                        </div>
                        {{!-- <footer class="blockquote-footer">{{quote.character}} (<cite title="Source Title">{{quote.season}} Ã©pisode {{quote.episode}}).</cite></footer> --}}
                        </blockquote>
                    </div>
                </div>
            </div>
        </div>
{{yield}}