
<div class="container">
    <div class="row">
        <div class="col">
            <h1>Liste des citations:</h1>
        </div>
    </div>
      
    {{#each @model as |quote|}}
        <div class="row quote-row mt-2">
            <div class="col">
                <div class="card">
                    <div class="card-header bold" >
                        Citation #{{quote.id}}
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                        <p>{{quote.text}}</p>
                        <footer class="blockquote-footer">{{quote.character}} (<cite title="Source Title">{{quote.season}} Ã©pisode {{quote.episode}}).</cite></footer>
                        </blockquote>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}

    

</div>