<div class="container">
    <div class="text-center">
        <div class="row">
            <div class="col">
                <h1>Tableau des scores  </h1>
            </div>
        </div>
        <div class="scoreboard">

        {{#if @model.newScore.score}}
        <div class="row d-flex justify-content-center">
            <p>{{@model.newScore.name}}, votre score est de: <strong>{{@model.newScore.score}}</strong></p>
        </div>
        {{/if}}
        
        {{#each @model.scoreList as |leaderboard index|}}
            <div class="scoreboardPlayer">
              {{!-- <p>Position: {{index}} ------- Nom: {{leaderboard.name}} -------  Score: {{leaderboard.score}} </p> --}}
                <div class="row score">
                    <div class=" col-sm-4">
                        #{{index}}
                    </div>
                    <div class=" col-sm-4">
                        {{leaderboard.name}}
                    </div>
                    <div class=" col-sm-4">
                        {{leaderboard.score}}
                    </div>
                </div>
                <BsProgress as |pg| >
                 <pg.bar @value={{leaderboard.score}} @minValue={{0}} @maxValue={{@model.topScore}} @type="danger" />
                </BsProgress>
                </div>
        {{/each}}
        </div>
    
    </div>

</div>

